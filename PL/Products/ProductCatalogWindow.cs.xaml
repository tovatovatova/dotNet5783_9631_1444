<Window x:Class="PL.Products.ProductCatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Products"
        mc:Ignorable="d"
            DataContext="{Binding myProd, RelativeSource={RelativeSource Self}}"

    Title="ProductCatalogWindow" Height="740" Width="1119">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.RowSpan="3"/>
        <ScrollViewer Background="#FFF1F1F1" Grid.ColumnSpan="2" Margin="85,40,85,10" Grid.RowSpan="2">
            <StackPanel x:Name="stackPanelProduct" >
                <TextBlock Text="Items" Margin="10" FontSize="22" FontWeight="Medium"/>
                <StackPanel Margin="20 0">
                    <ItemsControl x:Name="ListViewProducts" ItemsSource="{Binding}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="10" Width="160" Height="190">
                                    <StackPanel>
                                        <Border Width="120" Height="120" CornerRadius="5" Margin="5">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="1"/>
                                            </Border.Effect>
                                            <Border.Background>
                                                <!--<ImageBrush ImageSource="C:\Users\tovar\source\repos\tovatovatova\dotNet5783_9631_1444\PL\Products\pictures\100003.jpg"/>-->
                                                <ImageBrush ImageSource="{Binding ImagesSource}"/>
                                            </Border.Background>
                                        </Border>
                                        <!--<TextBlock Margin="15 0" Text="{Binding Category, StringFormat={}{0:C}}" FontSize="17" FontFamily="Franklin Gothic Medium"/>-->
                                        <TextBlock Margin="15 0" Text="{Binding Name}" FontSize="15" FontStretch="Normal"/>
                                        <TextBlock Margin="18 0" Text="{Binding ID}" FontSize="15" FontStretch="Normal"/>
                                        <TextBlock Margin="20 0"  FontSize="15" FontStretch="Normal">
                                            <Run Text="{Binding Price}"/>
                                            <Run Text="$"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
