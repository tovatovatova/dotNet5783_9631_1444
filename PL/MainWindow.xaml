<Window x:Name="MainWindow1" x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Grid Margin="0,-14,0,0" RenderTransformOrigin="0.5,0.5" Background="#FFB4F1F1" Grid.IsSharedSizeScope="True">
        <Grid.FocusVisualStyle>
            <Style/>
        </Grid.FocusVisualStyle>
        <Button x:Name="btnAdmin" Content="Admin" HorizontalAlignment="Left" Margin="24,275,0,0" VerticalAlignment="Top" Height="127" Width="249" Click="btnAdmin_Click" FontSize="29" FontFamily="Bodoni MT Black" FontWeight="Bold" Foreground="#FFEFF0F1" RenderTransformOrigin="0.5,0.5" FontStyle="Oblique" >
            <Button.Background>
                <ImageBrush ImageSource="/pic2.png" Stretch="Fill"/>
            </Button.Background>
            <Button.FocusVisualStyle>
                <Style/>
            </Button.FocusVisualStyle>
            <Button.Style>
                <Style/>
            </Button.Style>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="8" Y="4"/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFD6B0ED" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Label x:Name="lblTracking" Content="Enter number of order for tracking:" HorizontalAlignment="Left" Margin="580,263,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtOrderId" HorizontalAlignment="Left" Margin="610,313,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125" Height="25"/>
        <Button x:Name="btnTracking" Content="Track" HorizontalAlignment="Left" Margin="610,363,0,0" VerticalAlignment="Top" Height="39" Width="112" Click="btnTracking_Click"/>




    </Grid>
</Window>
