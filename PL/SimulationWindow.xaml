<Window x:Class="PL.SimulationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding SimulationOrders,RelativeSource={RelativeSource Self}}"
        Title="SimulationWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="SimulationTemplate" DataType="local:OrderForList">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />




                </Grid.RowDefinitions>
                <Border Grid.Row= "0"  Background="LightCyan" CornerRadius="5" Grid.RowSpan="10" >
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1"/>
                    </Border.Effect>

                </Border>
                <TextBlock  Grid.Row= "0" FontSize="10" HorizontalAlignment="Left" Margin="5,0,0,0"  FontFamily="Arial Black" >
                  <Run Text="order id: "/>  
                  <Run Text="{Binding ID}"/>
                </TextBlock>
                <TextBlock  Grid.Row= "1" FontSize="10" HorizontalAlignment="Left" Margin="5,0,0,0" FontFamily="Arial Black" >
                  <Run Text="custome name: "/>  
                  <Run Text="{Binding CustomerName}"/>
                </TextBlock>
                <TextBlock  Grid.Row= "2" FontSize="10" HorizontalAlignment="Left" Margin="5,0,0,0"  FontFamily="Arial Black" >
                  <Run Text=" Amount Of Items: "/>  
                  <Run Text="{Binding AmountOfItems}"/>
                </TextBlock>
                <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:C}}" Grid.Row= "3" FontSize="10" HorizontalAlignment="Left" Margin="5,0,0,0" FontWeight="Bold" FontFamily="Arial Black" />
                <TextBox Text="{Binding Status}" Grid.Row= "4" FontSize="10" IsReadOnly="True" Background="{Binding Status,Converter={StaticResource statusToBackColor}}" HorizontalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold" FontFamily="Arial Black" />
                <ProgressBar x:Name="progBarTime"  Grid.Row= "6" Margin="10,0,15,0" HorizontalAlignment="Left" Value="{Binding Status,Converter={StaticResource statusToProgressValue}}" Grid.RowSpan="2" Height="29"  VerticalAlignment="Top" Width="209" Background="#FFC9C1C1" Foreground="#FF1D1111"/>

            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="20,20,20,20">
        <ScrollViewer Background="LightCyan" Margin="20,50,20,20" Grid.Row="1" >
            <ListView x:Name="ordersList" ItemsSource="{Binding}" ItemTemplate="{StaticResource SimulationTemplate}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ListView>
        </ScrollViewer>
        <Button x:Name="start" Content="start" HorizontalAlignment="Left" Margin="153,0,0,0" VerticalAlignment="Top" Height="37" Width="112" Click="start_Click"/>
        <Button x:Name="stop" Content="stop" HorizontalAlignment="Left" Margin="285,0,0,0" VerticalAlignment="Top" Height="37" Width="95" Click="stop_Click"/>

    </Grid>


</Window>
